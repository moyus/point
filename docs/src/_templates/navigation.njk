  {
    label: 'Getting Started',
    children: [
      { label: 'Introduction', path: '' },
      { label: 'Installation', path: '#installation' },
      { label: 'Customization', path: '#customization' },
      { label: 'Browser Support', path: '#browser-support' },
      { label: 'Style Guide', path: 'style-guide.html' }
    ]
  },
  {
    label: 'Content',
    children: [
      { label: 'Typography', path: 'typography.html' },
      { label: 'Table', path: 'table.html' },
      { label: 'Media', path: 'media.html' }
    ]
  },
  {
    label: 'Layouts',
    children: [
      { label: 'Container', path: 'container.html' },
      { label: 'Flex Grid', path: 'flex-grid.html' },
      { label: 'Level', path: 'level.html' }
    ]
  },
  {
    label: 'Components',
    children: [
      { label: 'Badge', path: 'badge.html' },
      { label: 'Box', path: 'box.html' },
      { label: 'Breadcrumb', path: 'breadcrumb.html' },
      { label: 'Button', path: 'button.html' },
      { label: 'Dropdown', path: 'dropdown.html' },
      { label: 'Form', path: 'form.html' },
      { label: 'Hint', path: 'hint.html' },
