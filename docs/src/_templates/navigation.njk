      { label: 'Layout', path: 'layout.html' },
      { label: 'Spacing', path: 'spacing.html' },
      { label: 'Text', path: 'text.html' }
    ]
  }
] %}
<nav id="navigation" class="menu" data-toggle="menu">
  <ul class="menu__list">
    {% for group in menu %}
    <li class="menu__item{% if page.path[0] === group.label %} is-active{% endif %}"> 
      <a class="menu__link">{{ group.label }}</a>
      <ul class="menu__list">
        {% for item in group.children %}
        <li class="menu__item">
          <a href="{{project.url + '/' + item.path}}" class="menu__link{% if page.path[1] === item.label %} is-active{% endif %}">{{item.label}}</a>
        </li>
        {% endfor %}
      </ul>
    <li>
    {% endfor %}
  </ul>
</nav>
